<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <strong>
        <th><font size='4'>Title</font></th>
        <th><font size='4'>Author</font></font></th>
        <th><font size='4'>Blog entry</font></th>
        <th colspan="3"></th>
      </strong>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>

        <td><%= @post.user.email %></td>
        <td><%= link_to 'Show', post, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_post_path(post),  class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },  class: 'btn btn-danger' %></td>
      </tr>
      <tr>
        <td><br></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
